<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.gianlu.commonutils.SuperTextView
        android:id="@+id/leaderSheet_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.gianlu.commonutils.SuperTextView
        android:id="@+id/leaderSheet_weekTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.gianlu.commonutils.SuperTextView
        android:id="@+id/leaderSheet_dailyAverage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.gianlu.timeless.Charting.SquarePieChart
        android:layout_marginTop="8dp"
        android:id="@+id/leaderSheet_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>